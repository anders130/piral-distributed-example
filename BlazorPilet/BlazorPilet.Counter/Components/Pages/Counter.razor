@page "/counter"
@inject IPiletService PiletService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<AuthorizeView>
    <p>Hello, @context.User.Identity?.Name!</p>
</AuthorizeView>


@code {
    private int currentCount = 0;

    protected override void OnInitialized()
    {
        PiletService.AddEventListener<int>("counter-notify", count => PiletService.ShowNotification($"Hello, this is the other blazor pilet: {count}", 3000));
    }

    private async Task IncrementCount()
    {
        currentCount++;
        var token = await PiletService.GetAccessToken();
    }
}
